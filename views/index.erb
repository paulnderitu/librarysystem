<h1>Welcome to the To the Library System</h1>

  <p>Create a new patron:</p>

    <form action="/patrons" method="post">
      <label for="name">Patron Name:</label>
      <input id="name" name="name" type="text">

      <button type="submit">Add patron</button>
    </form>



  <h3>Add books to any patron: </h3>

  <form action="/books" method="post">

    <label for="patron_id">Select a Patron</label>
  <select id='patron_id' name='patron_id' type='text'>
    <% @patrons.each() do |patron| %>
      <option value="<%= patron.id()%>"> <%= patron.name() %> </option>
    <% end %>
  </select>

  <br>
  <br>
    <label for="title">Title of the book:</label>
    <input id="title" name="title" type="text">

    <label for="author">Author of the book:</label>
    <input id="author" name="author" type="text">

    <button type="submit">Add book</button>
  </form>

  <% if @patrons.any?() %>
    <p>Click on a patron to see his/her books:</p>

    <ul>
      <% @patrons.each do |patron| %>
      <li><a href="/patrons/<%= patron.id() %>"><%= patron.name() %></a></li>
      <% end %>
    </ul>
    <% else %>
    <p>There are no patrons yet!</p>
    <% end %>
